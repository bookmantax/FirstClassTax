<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome!"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please create a profile."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:ems="5"
        android:id="@+id/add_Name_EditText"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="5"
        android:id="@+id/add_Address_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Address"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_Employer_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Airline Employer"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/add_Base_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Home Airport"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="5"
        android:id="@+id/add_Email_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="5"
        android:id="@+id/add_Phone_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Phone"
        android:textStyle="bold" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/add_save_btn"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="48dp"
            android:layout_centerInParent="true" />


    </RelativeLayout>

</LinearLayout>