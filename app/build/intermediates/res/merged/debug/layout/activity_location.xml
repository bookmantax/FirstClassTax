<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Location Avaliable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:textSize="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country"
        android:id="@+id/country_tv"
        android:textAlignment="center"
        android:layout_below="@+id/state_tv"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State"
        android:id="@+id/state_tv"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/city_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City"
        android:textAlignment="center"
        android:id="@+id/city_tv"
        android:layout_above="@+id/state_tv"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Per Diem:"
        android:id="@+id/textView12"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/perDiem_tv"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="US $"
        android:id="@+id/meals_tv"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/perDiem_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOCATION"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You are in :"
        android:id="@+id/textView14"
        android:layout_above="@+id/city_tv"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meals &amp; Incidentals: "
        android:id="@+id/textView15"
        android:layout_below="@+id/country_tv"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="US $"
        android:id="@+id/perDiem_tv"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textview1"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lodging: "
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="US $ "
        android:id="@+id/lodging_tv"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignStart="@+id/meals_tv" />

</RelativeLayout>