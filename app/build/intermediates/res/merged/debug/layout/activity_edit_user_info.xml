<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit User Info"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="50dp" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="5"
        android:id="@+id/edit_Name_EditText"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="5"
        android:id="@+id/edit_Address_EditText"
        android:layout_gravity="center_horizontal"
        android:text="Address"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Employer_EditText"
        android:layout_gravity="center_horizontal"
        android:text="Airline Employer"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/edit_Base_EditText"
        android:layout_gravity="center_horizontal"
        android:text="Home Airport"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="5"
        android:id="@+id/edit_Email_EditText"
        android:layout_gravity="center_horizontal"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="5"
        android:id="@+id/edit_Phone_EditText"
        android:layout_gravity="center_horizontal"
        android:text="Phone"
        android:textStyle="bold" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/edit_cancel_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="523dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/edit_save_btn"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/edit_cancel_btn"
            android:layout_marginEnd="48dp" />


    </RelativeLayout>

</LinearLayout>